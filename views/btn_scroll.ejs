<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="PQH tobi" />
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/header_style.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/responsive.css" />
    <script src="/js/fontawesome.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/font.css" />

    <title>Scada Foam</title>
  </head>
  <body>
    <div class="block_scroll_num">
      <li onclick="window.scrollTo(0, 0)"><div class="scroll_btn">1</div></li>
      <li onclick="scrollBtn2()"><div class="scroll_btn">2</div></li>
      <li onclick="window.scrollTo(0, scrollMax)"><div class="scroll_btn">3</div></li>
    </div>
  </body>
  <script>
    $ = document.querySelector.bind(document);
    $$ = document.querySelectorAll.bind(document);
    const btn_scroll = $$(".scroll_btn");
    const local_url = window.location.href;
    const split_local = local_url.split("#");
    const scrollMax = document.documentElement.scrollHeight - window.innerHeight;

    const check_href = () => {
      btn_scroll.forEach((el) => el.classList.remove("btn_active"));
      const scroll_load = window.scrollY;
      if (scroll_load >= 0 && scroll_load < 390) {
        btn_scroll[0].classList.add("btn_active");
      } else if (scroll_load >= 400 && scroll_load < 492) {
        btn_scroll[1].classList.add("btn_active");
      } else {
        btn_scroll[2].classList.add("btn_active");
      }
    };
    function scrollBtn2(){
      const url = window.location.href
      const text = url.split('/');
      if(text[3] === "auto"){
        window.scrollTo(0, 380)
      }
      else{
        window.scrollTo(0, 360)
      }
    }
    

    window.onload = check_href();

    btn_scroll.forEach((e, index) => {
      e.onclick = function () {
        btn_scroll.forEach((el) => el.classList.remove("btn_active"));
        this.classList.add("btn_active");
      };
    });
  </script>
</html>
