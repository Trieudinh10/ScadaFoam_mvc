<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/export.css">
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />
    <script src="/js/fontawesome.js"></script>
    <title>Lưu Foam</title>
</head>
<body>
    <%- include('header.ejs'); -%>
    <div class="export_container">
        <div id="Baocao">
            <div class="input_item"> 
                <label id="lb_Search_Start">Từ:</label>
                <input id="dtpk_Search_Start" type="datetime-local">
            </div>
            <div class="input_item">
                <label id="lb_Search_End">Đến:</label>
                <input id="dtpk_Search_End" type="datetime-local">
            </div>
           <div class="input_item_btn">
            <button id="btt_Search" class="btn" onclick="fn_SQL_By_Time();
            "></i> TÌM KIẾM</button>

           </div>
             <div class="input_item_btn">
                <button id="btt_Excel" class="btn" onclick="fn_excel();
                "></i> BÁO CÁO</button>
             </div>
             <div class="change_btn" onclick=changeTable()></div>
        </div>
        <div class="export_body">
            <div class="export_para">
                <div id = "div_table_info">
                   <table id="table_info" >
                       <thead>
                       <tr >
      
                           <th class="th_time" >Thời gian</th>
                   
                           <th >Trạng Thái</th>
      
                           <th >Nhiệt Độ</th>
      
                           <th >Độ ẨM</th>
      
                           <th >Góc Mở</th>
                           
                           <th >Tốc Độ Quạt</th>
                           <th >Thông Tin Lỗi/Cảnh Báo</th>
                           <tr>
                           <td>06/07/2023 - 10h30p20s</td>
                           <td>on</td>
                           <td>100*c</td>
                           <td>23*</td>
                           <td>360deg</td>
                           <td>300</td>
                           <td>on</td>
                           </tr>
                       </tr>
                       </thead>
                   </table>
                 </div>
      </div>
      <div class="export_error">
        <div id = "div_table_error">
            <table id="table_error" >
                <thead>
                <tr >

                    <th class="th_time" >Thời gian</th>
            
                    <th >Trạng Thái</th>

                    <th >Nhiệt Độ</th>

                    <th >Độ ẨM</th>

                    <th >Góc Mở</th>
                    
                    <th >Tốc Độ Quạt</th>
                    <th >Thông Tin Lỗi/Cảnh Báo</th>
                </tr>
                </thead>
            </table>
          </div>
      </div>
        </div>
    </div>

</body>
<script>
    const btnChange = document.querySelector('.change_btn');
    const body = document.querySelector('.export_para');
    const error = document.querySelector('.export_error');
    const changeTable = () =>{
        if(btnChange.classList[1] === 'change'){
            body.style.display = 'block';
            error.style.display ='none';
            btnChange.classList.remove('change');
        }
        else{
            body.style.display = 'none';
            error.style.display ='block';
            btnChange.classList.add('change');
        }
    }
</script>
</html>