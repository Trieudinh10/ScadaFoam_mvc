              <label for="">Cài đặt</label>
              <input id="temp_auto_2" disabled="disabled" type="number" min="16" max="31"/>
              <script>fn_Auto_IOField_IO("Nhap_temp_auto_2", "temp_auto_2", 0);</script>
            </div>
          </div>
        </div>
