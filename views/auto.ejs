                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
              </select>
              <script>fn_Auto_IOField_IO("Mode_auto_4", "mode_aut_4", 0);</script>
            </div>
          </div>

          <div class="setting_content-item">
            <h2>Tốc độ Quạt (mod)</h2>
